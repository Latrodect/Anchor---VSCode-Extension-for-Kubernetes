{
  "name": "backdoor",
  "displayName": "Backdoor",
  "description": "K8S and Docker Structure generator. Online code reviewer.",
  "publisher": "Pilliage",
  "icon": "images/backdoor.png",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Latrodect/Backdoor-VSCode-Extension-for-K8S-Setup-and-Code-Review"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:backdoor.analyzeCode",
    "onCommand:backdoor.generateInlineCommands",
    "onCommand:backdoor.backdoorDashboardInit",
    "onCommand:backdoor.generateKubernetesFiles",
    "onCommand:backdoor.generateDockerFiles",
    "onCommand:backdoor.generateDockerComposeYaml"
  ],
  "contributes": {
    "commands": [
      {
        "command": "backdoor.analyzeCode",
        "title": "Backdoor: Analyze Code"
      },
      {
        "command": "backdoor.generateInlineCommands",
        "title": "Backdoor: Generate Inline Commands"
      },
      {
        "command": "backdoor.backdoorDashboardInit",
        "title": "Backdoor Reviewer: Dashboard"
      },
      {
        "command": "backdoor.generateKubernetesFiles",
        "title": "Backdoor Kubernetes: Generate K8S files"
      },
      {
        "command": "backdoor.generateDockerFiles",
        "title": "Backdoor Docker: Generate Docker files"
      },
      {
        "command": "backdoor.generateDockerComposeYaml",
        "title": "Backdoor Docker Compose: Generate Docker Compose YAML"
      }
    ]
  },
  "keybindings": [
    {
      "command": "generateDockerFiles",
      "key": "ctrl+d"
    },
    {
      "command": "generateKubernetesFiles",
      "key": "ctrl+f"
    },
    {
      "command": "backdoorDashboardInit",
      "key": "ctrl+i"
    }
  ],
  "scripts": {
    "compile": "tsc",
    "watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.6",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "esprima": "^4.0.1",
    "fs": "^0.0.1-security"
  }
}
